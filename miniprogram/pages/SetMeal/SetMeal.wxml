<view class="SetMeal">
  <view class="toptools">
    <view class="default {{sort==='default'?'ok':''}}" bindtap="default">全部</view>
    <view class="price" bindtap="sort">
      价格
      <view class="sort">
        <view class="icon iconfont icon-shang {{sort==='top'?'ok':''}}"></view>
        <view class="icon iconfont icon-xiala {{sort==='low'?'ok':''}}"></view>
      </view>
    </view>
    <view class="hot" bindtap="hot">热门</view>
    <view class="screen" bindtap="screen">
      <view class="icon iconfont icon-shaixuan">筛选</view>
    </view>
  </view>
  <view class="SetMeal-item" data-index="{{index}}" wx:for="{{dataArr}}" wx:key="index" bindtap="goToSeries">
    <image class="SetMeal-item-img" src="{{item.cover}}" mode="aspectFit" lazy-load="false" binderror="" bindload=""></image>
    <view class="title">{{item.seriesName}}</view>
    <view class="price">￥{{item.price}}</view>
  </view>
</view>
<view class="search">
  <view class="form">
    <view class="label">
      <view class="label-title">关键字搜索</view>
      <view class="search-input">
        <i class="iconfont icon-search"></i>
        <input type="text" placeholder="请输入关键字" />
      </view>
      <view class="hotSearch">
        <view class="hotSearch-title">热门搜索</view>
        <view class="hotItem">证件照</view>
        <view class="hotItem">结婚登记照</view>
        <view class="hotItem">形象照</view>
        <view class="hotItem">情侣</view>
        <view class="hotItem">婚纱</view>
      </view>
    </view>
    <view class="label price">
      <view class="label-title">价格区间(元)</view>
      <view class="price-input">
        <input type="text" placeholder="最低价" name="" id="" />
      </view>
      <veiw class="icon">-</veiw>
      <view class="price-input">
        <input type="text" placeholder="最高价" name="" id="" />
      </view>
    </view>
    <view class="buttonGroup">
      <button class="reset" form-type="reset">重置</button>
      <button class="submit" form-type="submit">确定</button>
    </view>
  </view>
</view>