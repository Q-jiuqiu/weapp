.My .information {
  padding: 25rpx 30rpx 40rpx;
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.My .information .picture {
  width: 100rpx;
  height: 100rpx;
  background-color: #f47276;
  border-radius: 50%
}

.My .operation {
  box-shadow: 0px 0px 5px #888888;
}

.My .operation .order-info {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0
}

.My .operation .my-info view {
  padding: 40rpx;
  border-bottom: 1px solid #eeeeee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.My .operation .my-info view .iconfont {
  font-size: 30rpx;
}

.My .iconfont {
  font-size: 50rpx;
  text-align: center
}