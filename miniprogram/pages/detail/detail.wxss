.detail {
  width: 100%
}

.detail .test {
  height: 300rpx;
  width: 300rpx;
  background-color: red
}

.detail .tool {
  background-color: #ffffff;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  height: 115rpx;
}

.detail .toolBox {
  width: 100%;
  height: 115rpx;
}

.detail .tool .shop {
  width: 80%;
  display: flex
}

.detail .tool .shop .text {
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
}

.detail .tool .shop .logo {
  margin-left: 20rpx;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.detail .tool .shop .name {
  font-size: 25rpx
}

.detail .tool .shop .slogen {
  font-size: 20rpx;
  color: #969494
}

.detail .tool .order {
  width: 20%;
  background-color: #f47175;
  font-size: 30rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}