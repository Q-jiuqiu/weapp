.echart_panel {
  width: 100%;
  height: 600px;
}

.tabs {
  height: 5vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.swiper {
  width: 100%;
  height: 94vh;
}

.swiper swiper-item {
  overflow: scroll;
}

.detail .radioGroup {
  display: flex;
  width: 70%;
  justify-content: flex-start;
}

.detail .graphic {
  width: 25%;
  justify-content: flex-end;
  font-size: 20rpx;
  color: #82c8ae;
  display: flex;
  align-items: center;
}

.detail .radioGroup .radioLabel {
  transform: scale(0.7);
}

.detail .content {
  padding: 12rpx;
  margin-bottom: 20rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}

.detail .content .left {
  text-align: center;
  width: 10%;
}

.detail .content .right {
  flex: 1;
}

.detail .noData {
  text-align: center;
  padding: 20rpx
}

.buttonGroup {
  width: 100%;
  display: flex;
}