.adminTool {
  width: 100rpx;
  position: fixed;
  right: 20rpx;
  top: 60%;
  z-index: 10;
}

.adminTool .toolItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 10rpx;
  width: 100rpx;
  text-align: center;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  font-weight: bold;
}

.adminTool .toolItem .iconfont {
  font-weight: bolder;
  line-height: 30rpx;
}

.adminTool .toolItem .count {
  position: absolute;
  top: 0%;
  left: 50%;
  transform: translate(50%, -15%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f00
}

.adminTool .toolItem .title {
  font-size: 20rpx;
}