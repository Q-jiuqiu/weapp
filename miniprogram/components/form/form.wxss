.container {
  position: relative;
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #f5f5f5;
  overflow-x: hidden
}

.container .content-input {
  padding: 0 20rpx;
  background-color: #fff;
}

.container .form {
  background: #ffffff;
  padding: 0 30rpx;
  border-top: 1px solid #e4e4e4
}

.container .form .imgBox {
  color: #ccc;
  position: relative;
  margin: 20rpx 0;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  height: 300rpx;
  border: 1px #ccc dashed
}

.container .form .imgBox .content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}

.container .form .imgBox .content .addIcon {
  font-size: 100rpx;
  text-align: center
}

.container .form .imgBox .content .addtext {
  text-align: center
}

.container .form .imgBox .img {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 300rpx;
  height: 300rpx
}

.isError {
  border-color: #f00 !important;
  color: #f00 !important;
}

.inputBox {
  position: relative;
  min-height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  align-items: center
}

inputBox .font14 {
  font-size: 14px
}

.inputBox .input {
  margin-left: 40rpx;
  flex: 1
}

.inputBox .inputTitle {
  display: flex;
  align-items: center
}

.inputBox .tips {
  position: absolute;
  bottom: 0;
  left: 30%
}

.inputWarn {
  color: #f00;
  border-bottom-color: #f00
}

.container .form .switchBox {
  background: #ffffff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx
}

.container .form .switchBox .switchTitle {
  display: flex;
  align-items: center
}

.container .form .textareaBox {
  background: #ffffff;
  padding: 30rpx
}

.container .form .textareaBox .textareaTitle {
  align-items: center;
  margin-bottom: 20rpx
}

.container .form .textareaBox .textarea {
  border: #ccc 1px solid
}

.radioBox {
  position: relative;
  min-height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  align-items: center
}

.radioBox .radioContent {
  margin-left: 40rpx;
}

.radioBox .radioContent .radioItem {
  display: flex;
  align-items: center;
  justify-content: space-around
}

.radioBox .radioContent .radioItem .icon {
  display: inline-block;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ccc;
  border-radius: 50%
}

.radioBox .radioContent .radioItem .choose {
  background-color: #60d8d4
}

.container .buttonBox {
  height: 100rpx;
  height: 100rpx;
  height: 100rpx
}

.container .button {
  position: absolute;
  top: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin: 0 auto;
  border-radius: 5rpx;
  color: #fff;
  width: 100%;
  background: linear-gradient(to right, #66ded0, #229dfe);
  transform: translateY(-100%);
}

.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important
}

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important
}

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important
}

.ipt-wrap:last-child {
  border-bottom: none
}